<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".activities.VaultListDialogFragment"
    tools:listitem="@layout/fragment_vault_list_dialog_list_dialog_item">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textSize="24dp"
        android:text="Select vault" />

    <TextView
        android:id="@+id/addVault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:textColor="@color/snow"
        android:textAlignment="center"
        android:textSize="20dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentEnd="true"
        android:drawableTint="@color/snow"
        android:text="Add Vault"
         />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/label"
        android:clipToPadding="false"
        android:paddingTop="@dimen/list_item_spacing_half"
        android:paddingBottom="@dimen/list_item_spacing_half" />
</LinearLayout>